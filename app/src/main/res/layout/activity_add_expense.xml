<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="expense"
            type="com.beginning.myexpenses.database.Expense" />
        <variable
            name="clickHandlers"
            type="com.beginning.myexpenses.AddExpenseActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/addActivityPrimaryBackground"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:gravity="center"

       >

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:layout_marginTop="3sp"
            android:hint="Enter Title"
            android:inputType="text"
            android:text="@={expense.title}"
            android:textColor="@color/systemUI"
            android:textColorHint="@color/systemUI"
            android:animateLayoutChanges="true"/>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Enter Price"
            android:inputType="numberDecimal"
            android:text="@={expense.price}"
            android:textColor="@color/systemUI"
            android:textColorHint="@color/systemUI"
            android:animateLayoutChanges="true"/>

        <EditText
            android:id="@+id/et_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:onClick="@{clickHandlers::editTextDateClickHandler}"
            android:text="@={expense.date}"
            android:textColor="@color/systemUI"
            android:hint="Enter Date"
            android:textColorHint="@color/systemUI"
            android:inputType="date"
            android:focusable="false"
            android:ems="10"/>

<com.beginning.customcalendar.CustomCalendar
            android:id="@+id/customCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_gravity="center"
            app:day_of_week_length="3"
            android:visibility="gone"
            />



        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/systemUI"
            android:onClick="@{clickHandlers::addClickHandler}"
            android:text="Add"
            android:textColor="@color/white"
            android:animateLayoutChanges="true"/>
    </LinearLayout>
</layout>